---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/nav.astro";
import Home from "@/components/home.en.astro";
import Projects from "@/components/projects.en.astro";
import Contact from "@/components/contact.en.astro";
import Footer from "@/components/footer.en.astro";
---

<style>
  :root {
      --white: #FFFFFF;
      --black: #171717;
  }

  html {
      scrollbar-width: thin;
      scrollbar-color: var(--white) var(--black);
      scroll-behavior: smooth;
  }

  html::-webkit-scrollbar {
      width: 8px;
  }

  html::-webkit-scrollbar-track {
      background-color: var(--black);
  }

  html::-webkit-scrollbar-thumb {
      background-color: var(--black);
  }

  ::selection {
      background-color: white;
  }
</style>

<Layout title="Devsebastian44">
  <Nav />
  <Home />
  <Projects />
  <Contact />
  <Footer />
</Layout>

<script>
  import AOS from 'aos';
  import 'aos/dist/aos.css';

  document.addEventListener('DOMContentLoaded', () => {
    AOS.init();
  });
</script>
