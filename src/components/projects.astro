---
import { Image } from "astro:assets";
import bl4ck44 from "../../public/blog.png";
import marketgenius from "../../public/marketgenius.png";
import nextcloud from "../../public/nextcloud.png";
import sandboxed from "../../public/sandboxed.png";
import Challenge from "../../public/challenge.png";


interface Project {
  title: string;
  image: ImageMetadata;
  description: string;
  technologies: string[];
  link: string;
  preview?: string;
}

const projects: Project[] = [
  {
    title: "MarketGenius",
    image: marketgenius as ImageMetadata,
    description: "Sitio de cursos en línea especializado en programación y ciberseguridad con contenido educativo interactivo",
    technologies: ["Desarrollo Web","HTML", "CSS"],
    link: "https://github.com/Devsebastian44/Proyectos-web",
    preview: "https://marketgeniuseducation.netlify.app/",
  },
  {
    title: "Blog de Ciberseguridad",
    image: bl4ck44 as ImageMetadata,
    description: "Mi blog personal sobre ciberseguridad con artículos técnicos de hacking ético y análisis de seguridad",
    technologies: ["Desarrollo Web","HTML", "CSS", "JS"],
    link: "https://github.com/Devsebastian44/Sandboxed",
    preview: "https://devsebastian44-blog.netlify.app/",
  },
  {
    title: "Nextcloud Auto Setup",
    image: nextcloud as ImageMetadata,
    description: "Script de automatización para despliegue de Nextcloud automático",
    technologies: ["DevOps","Bash", "Apache"],
    link: "https://github.com/Devsebastian44/Nextcloud",
  },
  {
    title: "Sandboxed",
    image: sandboxed as ImageMetadata,
    description: "Script en Python para análisis automatizado de malware con detección de patrones sospechosos",
    technologies: ["Cyberseguridad","Python","Bash"],
    link: "https://github.com/Devsebastian44/Sandboxed",
  },
    {
    title: "Alura Store",
    image: Challenge as ImageMetadata,
    description: "Análisis de ventas, rendimiento y satisfacción de clientes de las tiendas de Alura Store",
    technologies: ["Ciencia de Datos","Python", "Pandas", "Matplotlib", "Seaborn"],
    link: "https://github.com/Devsebastian44/Challenge-Data-Science",
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Mi trabajo</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-12">Proyectos</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-[#1414149c] group border border-[#ffffff15] rounded-2xl p-5 hover:bg-[#ffffff08] transition-all duration-300 h-full flex flex-col w-full max-w-sm mx-auto">
          {/* Imagen del proyecto */}
          <div class="rounded-xl overflow-hidden shadow-lg mb-4 flex-shrink-0">
            <Image
              src={project.image}
              alt={project.title}
              class="w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          
          {/* Contenido del proyecto */}
          <div class="flex-grow flex flex-col">
            <h4 class="text-xl font-semibold mb-3">{project.title}</h4>
            <p class="text-[var(--white-icon)] text-sm mb-4 flex-grow leading-relaxed">{project.description}</p>
            
            <div class="flex flex-wrap gap-2 mb-5">
              {project.technologies.map((tech) => (
                <span class="px-3 py-1.5 bg-[#ffffff10] rounded-lg text-xs">
                  {tech}
                </span>
              ))}
            </div>
            
            {/* Botones debajo de las tecnologías */}
            <div class="flex gap-3 mt-auto">
              {/* Botón GitHub */}
              <a
                target="_blank"
                href={project.link}
                aria-label="GitHub"
                class="flex-1 flex justify-center items-center gap-2 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] py-2.5 px-3 rounded-lg bg-[#1414149c] hover:bg-[#ffffff15] text-sm font-medium"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="size-4"
                >
                  <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                </svg>
                <span>Código</span>
              </a>

              {/* Botón Preview solo si existe */}
              {project.preview && (
                <a
                  target="_blank"
                  href={project.preview}
                  aria-label="Preview"
                  class="flex-1 flex justify-center items-center gap-2 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] py-2.5 px-3 rounded-lg bg-[#1414149c] hover:bg-[#ffffff15] text-sm font-medium"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="size-4"
                  >
                    <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                  </svg>
                  <span>Web</span>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <a
      target="_blank"
      href="https://github.com/Devsebastian44"
      aria-label="GitHub"
      class="w-full max-w-sm mx-auto flex items-center justify-center gap-2 mt-12 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[#ffffff15]"
    >
      <span class="md:text-lg text-md">Más proyectos en</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        ></path>
      </svg>
    </a>
  </div>
</section>