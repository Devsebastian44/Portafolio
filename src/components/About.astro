---
import SkillSphere from "./SkillSphere.astro";

const iconMap: Record<string, string> = {
    HTML5: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/html5/html5-original.svg",
    CSS3: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/css3/css3-original.svg",
    JavaScript:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/javascript/javascript-original.svg",
    TypeScript:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/typescript/typescript-original.svg",
    React: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/react/react-original.svg",
    Angular:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/angular/angular-original.svg",
    Astro: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/astro/astro-original.svg",
    Bootstrap:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/bootstrap/bootstrap-original.svg",
    TailwindCSS:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tailwindcss/tailwindcss-original.svg",
    jQuery: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/jquery/jquery-original.svg",
    "Node.js":
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/nodejs/nodejs-original.svg",
    Laravel:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/laravel/laravel-original.svg",
    PHP: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/php/php-original.svg",
    Python: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/python/python-original.svg",
    PostgreSQL:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/postgresql/postgresql-original.svg",
    MySQL: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mysql/mysql-original.svg",
    MongoDB:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mongodb/mongodb-original.svg",
    Pandas: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/pandas/pandas-original.svg",
    Matplotlib:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/matplotlib/matplotlib-original.svg",
    Seaborn: "https://seaborn.pydata.org/_images/logo-mark-lightbg.svg",
    "Google Colab":
        "https://upload.wikimedia.org/wikipedia/commons/d/d0/Google_Colaboratory_SVG_Logo.svg",
    Git: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/git/git-original.svg",
    Docker: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/docker/docker-original.svg",
    Jenkins:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/jenkins/jenkins-original.svg",
    Bash: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/bash/bash-original.svg",
    Figma: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/figma/figma-original.svg",
    Kotlin: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/kotlin/kotlin-original.svg",
    "C Sharp":
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/csharp/csharp-original.svg",
    Go: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/go/go-original.svg",
    Elixir: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/elixir/elixir-original.svg",
    Redis: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/redis/redis-original.svg",
    Firebase:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/firebase/firebase-original.svg",
    Supabase:
        "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/supabase/supabase-original.svg",
    Postman: "https://cdn.simpleicons.org/postman/FF6C37",
    AWS: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/amazonwebservices/amazonwebservices-original-wordmark.svg",
    GitHub: "https://cdn.simpleicons.org/github/white",
    Linux: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/linux/linux-original.svg",
    Vercel: "https://cdn.simpleicons.org/vercel/FFFFFF",
    Obsidian: "https://cdn.simpleicons.org/obsidian/483699",
    "Next.js": "https://cdn.simpleicons.org/nextdotjs/white",
    Prisma: "https://cdn.simpleicons.org/prisma/5A67D8",
};

const skillCategories = [
    {
        title: "Desarrollo Frontend",
        icon: "layout",
        skills: [
            "HTML5",
            "CSS3",
            "JavaScript",
            "TypeScript",
            "React",
            "Angular",
            "Astro",
            "Bootstrap",
            "TailwindCSS",
            "jQuery",
            "Next.js",
        ],
    },
    {
        title: "Desarrollo Backend",
        icon: "server",
        skills: [
            "Node.js",
            "Laravel",
            "PHP",
            "Python",
            "Go",
            "Elixir",
            "Kotlin",
            "C Sharp",
        ],
    },
    {
        title: "Base de Datos",
        icon: "database",
        skills: [
            "PostgreSQL",
            "MySQL",
            "MongoDB",
            "Prisma",
            "Redis",
            "Firebase",
            "Supabase",
        ],
    },
    {
        title: "Cloud & DevOps",
        icon: "cloud",
        skills: ["Docker", "Jenkins", "AWS", "GitHub", "Vercel", "Linux"],
    },
    {
        title: "Ciencia de Datos",
        icon: "bar-chart-2",
        skills: ["Pandas", "Matplotlib", "Seaborn", "Google Colab"],
    },
    {
        title: "Herramientas & Diseño",
        icon: "pen-tool",
        skills: ["Git", "Bash", "Postman", "Figma", "Obsidian"],
    },
];
---

<section
    id="about"
    class="pb-24 relative overflow-hidden bg-[#020617] border-b border-slate-700"
>
    <div class="relative z-10">
        <!-- Tech Ticker -->
        <div class="relative w-full py-4 mb-16 overflow-hidden bg-[#0f172a]">
            <!-- Continuous Marquee Container -->
            <div class="flex whitespace-nowrap animate-ticker w-max">
                {
                    // Define the unique set of technologies once
                    Array.from({ length: 2 }).map((_) => (
                        <div class="flex items-center">
                            {[
                                { name: "Python", icon: "python" },
                                { name: "PHP", icon: "php" },
                                { name: "JavaScript", icon: "javascript" },
                                { name: "TypeScript", icon: "typescript" },
                                { name: "Kotlin", icon: "kotlin" },
                                { name: "C Sharp", icon: "csharp" },
                                { name: "HTML5", icon: "html5" },
                                { name: "CSS3", icon: "css3" },
                                { name: "React", icon: "react" },
                                { name: "Angular", icon: "angularjs" },
                                { name: "Astro", icon: "astro" },
                                { name: "Bootstrap", icon: "bootstrap" },
                                { name: "TailwindCSS", icon: "tailwindcss" },
                                { name: "jQuery", icon: "jquery" },
                                { name: "Pandas", icon: "pandas" },
                                { name: "Node.js", icon: "nodejs" },
                                { name: "Laravel", icon: "laravel" },
                                { name: "PostgreSQL", icon: "postgresql" },
                                { name: "MySQL", icon: "mysql" },
                                { name: "MongoDB", icon: "mongodb" },
                                { name: "Docker", icon: "docker" },
                                { name: "Git", icon: "git" },
                                { name: "Jenkins", icon: "jenkins" },
                                { name: "Bash", icon: "bash" },
                                { name: "Figma", icon: "figma" },
                            ].map((tech) => (
                                <div class="flex items-center gap-4 px-8 transition-all duration-300 hover:scale-110 cursor-default opacity-80 hover:opacity-100">
                                    <img
                                        src={`https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${tech.icon}/${tech.icon}-original.svg`}
                                        alt={tech.name}
                                        class="w-6 h-6"
                                    />
                                    <span class="text-xs font-mono text-slate-300 font-medium uppercase tracking-widest">
                                        {tech.name}
                                    </span>
                                </div>
                            ))}
                        </div>
                    ))
                }
            </div>
            <!-- Fade Edges -->
            <div
                class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[#0f172a] to-transparent z-10"
            >
            </div>
            <div
                class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[#0f172a] to-transparent z-10"
            >
            </div>
        </div>

        <!-- Header -->
        <div class="container mx-auto px-6 mb-16 text-center relative z-10">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">
                Sobre <span class="text-green-500">Mí</span>
            </h2>
            <p
                class="text-slate-400 text-sm md:text-base max-w-2xl mx-auto leading-relaxed"
            >
                Desarrollador apasionado con amor por el código limpio, el buen
                café y las contribuciones al código abierto.
            </p>
        </div>

        <div class="container mx-auto px-6">
            <!-- Dashboard Grid -->
            <div class="max-w-5xl mx-auto">
                <!-- Bio & Photo Section -->
                <div
                    class="lg:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4"
                >
                    <!-- Left: Sobre mí Text -->
                    <div
                        class="bg-[#050505] border border-white/10 rounded-2xl p-6 relative flex flex-col shadow-2xl group"
                    >
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                        <div class="flex items-center gap-3 mb-6 relative z-10">
                            <div
                                class="p-2.5 bg-green-500/10 rounded-xl text-green-500"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"
                                    ></path><circle cx="12" cy="7" r="4"
                                    ></circle></svg
                                >
                            </div>
                            <h4 class="text-lg font-bold text-white">
                                Quien soy
                            </h4>
                        </div>
                        <div
                            class="space-y-4 text-slate-400 text-sm leading-relaxed mb-8 relative z-10"
                        >
                            <p>
                                Soy desarrollador Full-stack con experiencia en
                                la creación de aplicaciones web modernas y
                                eficientes utilizando JavaScript, React y Astro.
                            </p>
                            <p>
                                Me enfoco en buenas prácticas de desarrollo,
                                rendimiento y una experiencia de usuario sólida
                                tanto en frontend como en backend.
                            </p>
                            <p>
                                Cuento con conocimientos en ciberseguridad
                                aplicados a la protección de sistemas y
                                aplicaciones, integrando principios de seguridad
                                desde el diseño hasta la implementación.
                            </p>
                            <p>
                                Además, desarrollo proyectos en ciencia de datos
                                e inteligencia artificial, con énfasis en
                                modelos predictivos e ingeniería de prompts,
                                integrando estas áreas para construir soluciones
                                tecnológicas completas, seguras e innovadoras.
                            </p>
                        </div>
                        <!-- Download CV Button -->
                        <div class="mt-auto relative z-10 flex justify-start">
                            <a
                                href="/CV.pdf"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="group/cv flex items-center gap-3 px-8 py-3 bg-[#0f172a] border border-white/10 rounded-xl text-white hover:border-green-500/50 hover:shadow-[0_0_20px_rgba(34,197,94,0.15)] transition-all duration-300 transform hover:-translate-y-1"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-green-500 group-hover/cv:scale-110 transition-transform"
                                    ><path
                                        d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
                                    ></path><polyline points="14 2 14 8 20 8"
                                    ></polyline></svg
                                >
                                <span class="font-bold tracking-wide"
                                    >Descargar CV</span
                                >
                            </a>
                        </div>
                    </div>

                    <!-- Right: Photo Placeholder -->
                    <div
                        class="bg-[#050505] border border-white/10 rounded-2xl p-6 relative flex items-center justify-center shadow-2xl group min-h-[400px] overflow-hidden"
                    >
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                        <!-- Photo -->
                        <div class="absolute inset-0 p-6">
                            <img
                                src="/Img/Foto.jpeg"
                                alt="Sebastian Zhunaula"
                                class="w-full h-full object-cover rounded-xl shadow-lg transform transition-transform duration-500 group-hover:scale-105"
                            />
                        </div>
                    </div>
                </div>

                <!-- Full Width: Habilidades Especializadas -->
                <div class="lg:col-span-2 mt-8">
                    <div
                        class="flex items-center gap-3 mb-8 relative z-10 px-2"
                    >
                        <div
                            class="p-2.5 bg-green-500/10 rounded-xl text-green-500"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><polyline points="16 18 22 12 16 6"
                                ></polyline><polyline points="8 6 2 12 8 18"
                                ></polyline></svg
                            >
                        </div>
                        <h4 class="text-lg font-bold text-white">
                            Habilidades Especializadas
                        </h4>
                    </div>

                    <!-- Categorized Tech Grid -->
                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 relative z-10"
                    >
                        {
                            skillCategories.map((category) => (
                                <div class="bg-[#050505] border border-white/10 rounded-2xl p-5 hover:border-green-500/30 transition-all duration-300 group">
                                    <div class="space-y-4">
                                        <div class="flex items-center gap-3 text-green-500/80 mb-3">
                                            {category.icon === "layout" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <rect
                                                        x="3"
                                                        y="3"
                                                        width="18"
                                                        height="18"
                                                        rx="2"
                                                        ry="2"
                                                    />
                                                    <line
                                                        x1="3"
                                                        y1="9"
                                                        x2="21"
                                                        y2="9"
                                                    />
                                                    <line
                                                        x1="9"
                                                        y1="21"
                                                        x2="9"
                                                        y2="9"
                                                    />
                                                </svg>
                                            )}
                                            {category.icon === "server" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <rect
                                                        x="2"
                                                        y="2"
                                                        width="20"
                                                        height="8"
                                                        rx="2"
                                                        ry="2"
                                                    />
                                                    <rect
                                                        x="2"
                                                        y="14"
                                                        width="20"
                                                        height="8"
                                                        rx="2"
                                                        ry="2"
                                                    />
                                                    <line
                                                        x1="6"
                                                        y1="6"
                                                        x2="6.01"
                                                        y2="6"
                                                    />
                                                    <line
                                                        x1="6"
                                                        y1="18"
                                                        x2="6.01"
                                                        y2="18"
                                                    />
                                                </svg>
                                            )}
                                            {category.icon === "database" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <ellipse
                                                        cx="12"
                                                        cy="5"
                                                        rx="9"
                                                        ry="3"
                                                    />
                                                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3" />
                                                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5" />
                                                </svg>
                                            )}
                                            {category.icon ===
                                                "bar-chart-2" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <line
                                                        x1="18"
                                                        y1="20"
                                                        x2="18"
                                                        y2="10"
                                                    />
                                                    <line
                                                        x1="12"
                                                        y1="20"
                                                        x2="12"
                                                        y2="4"
                                                    />
                                                    <line
                                                        x1="6"
                                                        y1="20"
                                                        x2="6"
                                                        y2="14"
                                                    />
                                                </svg>
                                            )}
                                            {category.icon === "cloud" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z" />
                                                </svg>
                                            )}
                                            {category.icon === "pen-tool" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <path d="m12 19 7-7 3 3-7 7-3-3z" />
                                                    <path d="m18 13-1.5-7.5L2 2l3.5 14.5L13 18l5-5z" />
                                                    <path d="m2 2 7.586 7.586" />
                                                    <circle
                                                        cx="11"
                                                        cy="11"
                                                        r="2"
                                                    />
                                                </svg>
                                            )}
                                            {category.icon === "shield" && (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                >
                                                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                                                </svg>
                                            )}
                                            <span class="text-sm font-bold tracking-wider uppercase text-white">
                                                {category.title}
                                            </span>
                                        </div>
                                        <div class="flex flex-wrap gap-2">
                                            {category.skills.map((skill) => (
                                                <span class="px-2 py-1 bg-[#0f172a]/80 border border-white/5 rounded-lg text-slate-400 text-[11px] hover:border-green-500/30 hover:text-white transition-all duration-300 cursor-default flex items-center gap-2 group/chip">
                                                    {iconMap[skill] && (
                                                        <img
                                                            src={iconMap[skill]}
                                                            alt={skill}
                                                            class="w-3.5 h-3.5 group-hover/chip:scale-110 transition-all"
                                                        />
                                                    )}
                                                    {skill}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- Bottom: Skill Sphere -->
            <div class="mt-10 flex items-center justify-center relative">
                <div class="max-w-[450px] w-full">
                    <SkillSphere
                        items={[
                            "HTML5",
                            "CSS3",
                            "JavaScript",
                            "TypeScript",
                            "React",
                            "Angular",
                            "Astro",
                            "Bootstrap",
                            "TailwindCSS",
                            "jQuery",
                            "Node.js",
                            "Laravel",
                            "PHP",
                            "Python",
                            "PostgreSQL",
                            "MySQL",
                            "MongoDB",
                            "Git",
                            "Docker",
                            "Jenkins",
                            "Bash",
                            "Figma",
                            "Kotlin",
                            "C Sharp",
                            "Pandas",
                            "Matplotlib",
                            "Seaborn",
                            "Google Colab",
                            "Go",
                            "Elixir",
                            "Redis",
                            "Supabase",
                            "Firebase",
                            "Postman",
                            "AWS",
                            "GitHub",
                            "Linux",
                            "Vercel",
                            "Obsidian",
                            "Next.js",
                            "Prisma",
                        ].map((name) => ({ name, icon: iconMap[name] || "" }))}
                    />
                </div>
            </div>
        </div>
    </div>
</section>
