---
const currentYear = new Date().getFullYear();
const socialLinks = [
    { name: "youtube", url: "https://www.youtube.com/@devsebastian44" },
    { name: "x", url: "https://x.com/devsebastian44" },
    { name: "tiktok", url: "https://www.tiktok.com/@devsebastian44" },
    { name: "instagram", url: "https://www.instagram.com/devsebastian44" },
];
---

<footer
    class="pt-24 pb-8 relative overflow-hidden bg-[#020617] border-t border-slate-700"
>
    <div class="container mx-auto px-6 relative z-10">
        <div class="mb-20">
            <!-- Brand & Bio -->
            <div class="space-y-8 text-center max-w-2xl mx-auto">
                <a
                    href="/"
                    class="text-2xl font-bold text-white tracking-tighter flex items-center justify-center gap-2"
                >
                    <img
                        src="/Img/favicon.png"
                        alt="DevPro Logo"
                        class="w-8 h-8 object-contain drop-shadow-[0_0_12px_rgba(34,197,94,0.6)]"
                    />
                    DevPro
                </a>
                <p class="text-slate-400 text-sm leading-relaxed mx-auto">
                    Creando experiencias digitales con código limpio,
                    creatividad y pasión por la innovación.
                </p>
                <div class="flex justify-center gap-6">
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-slate-500 hover:text-green-500 transition-colors"
                            >
                                <span class="sr-only">{social.name}</span>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    {social.name === "youtube" && (
                                        <>
                                            <path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17Z" />
                                            <path d="m10 15 5-3-5-3z" />
                                        </>
                                    )}
                                    {social.name === "x" && (
                                        <path d="M4 4l11.733 16h4.267l-11.733 -16zM4 20l6.768-6.708m2.46-2.441l6.772-6.851" />
                                    )}
                                    {social.name === "tiktok" && (
                                        <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5" />
                                    )}
                                    {social.name === "instagram" && (
                                        <>
                                            <rect
                                                width="20"
                                                height="20"
                                                x="2"
                                                y="2"
                                                rx="5"
                                                ry="5"
                                            />
                                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                            <line
                                                x1="17.5"
                                                y1="6.5"
                                                x2="17.51"
                                                y2="6.5"
                                            />
                                        </>
                                    )}
                                </svg>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div
            class="pt-8 border-t border-white/5 flex flex-col justify-center items-center text-center gap-2"
        >
            <div class="text-slate-500 text-xs font-medium leading-relaxed">
                Copyright © 2025 Sebastian Zhunaula. All rights reserved.
            </div>
        </div>
    </div>
</footer>
