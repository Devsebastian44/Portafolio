---
const about = {
  title: "About Me",
  description: `
    I am a Full-stack web developer with experience in technologies such as JavaScript, React, and Astro, focused on creating fast and accessible websites.
    Additionally, I have a strong focus on cybersecurity, working to ensure that applications are secure and protected against threats.
    My goal is to build efficient solutions that not only provide an exceptional experience, but also a secure digital environment for users.
  `,
  cvLink: "/CV.pdf"
};

const experiences = [
  {
    title: "Cybersecurity",
    date: "2022 - Present",
    description: `Implementation of security best practices to protect applications against vulnerabilities.`,
  },
  {
    title: "Full-stack Web Development",
    date: "2021 - Present",
    description: `Expert in technologies such as JavaScript, React, Node.js, and Astro to build fast and dynamic websites.`,
  },
  {
    title: "Performance Optimization",
    date: "2021 - Present",
    description: `Focus on creating efficient and fast solutions, ensuring an excellent user experience.`,
  }
];

const skills = [
  { category: "Frontend", percentage: 90 },
  { category: "Backend", percentage: 85 },
  { category: "DevOps", percentage: 75 },
  { category: "Mobile", percentage: 65 }
];

const technologies = [
  "astro",
  "HTML5",
  "CSS3",
  "TailwindCSS",
  "javaScript",
  "typeScript",
  "PHP",
  "Python",
  "PostgreSQL",
  "mysql",
  "MongoDB",
  "C Sharp",
  "Bootstrap",
  "Angular",
  "Laravel",
  "jquery",
  "react",
  "nodejs",
  "Docker",
  "git",
  "Jenkins",
  "bash",
  "Figma",
];
---

<section id="aboutme" class="border-t border-[#ffffff10] py-8">
  <div class="max-w-5xl mx-auto space-y-8 md:py-5 pb-5">
    
    <!-- Biography & Experience Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Biography -->
      <div class="bg-[#1414149c] text-white p-6 rounded-lg shadow-lg border border-[#ffffff10]">
        <h2 class="text-2xl font-bold text-[#E1181E]">{about.title}</h2>
        <p class="text-gray-300 mt-2 whitespace-pre-line">{about.description}</p>
        <a href={about.cvLink} target="_blank" 
           class="mt-4 inline-flex items-center bg-[#E1181E] text-white px-4 py-2 rounded-md font-semibold hover:bg-[#C01319] transition">
          Download CV  
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="20" height="20" fill="white" class="ml-2">
            <path d="M288 32c0-17.7-14.3-32-32-32s-32 14.3-32 32v242.7l-73.4-73.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l128 128c12.5 12.5 32.8 12.5 45.3 0l128-128c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L288 274.7V32zM64 352c-35.3 0-64 28.7-64 64v32c0 35.3 28.7 64 64 64h384c35.3 0 64-28.7 64-64v-32c0-35.3-28.7-64-64-64H346.5l-45.3 45.3c-25 25-65.5 25-90.5 0L165.5 352H64zm368 56a24 24 0 1 1 0 48 24 24 0 1 1 0-48z"/>
          </svg>
        </a>
      </div>

      <!-- Experience -->
      <div class="border-l-2 border-[#E1181E] pl-6 space-y-6">
        {experiences.map((exp) => (
          <div class="relative">
            <div class="absolute -left-[35px] top-0 w-5 h-5 bg-[#E1181E] rounded-full"></div>
            <h3 class="text-lg font-semibold text-white">{exp.title}</h3>
            <p class="text-sm text-[#E1181E]">{exp.date}</p>
            <p class="text-gray-300 mt-1">{exp.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- My Toolbox Section - Full Width Centered -->
    <div class="max-w-[calc(100%)] mx-auto">
      <div class="bg-[#1414149c] text-white p-6 rounded-lg shadow-lg border border-[#ffffff10]">
        <div class="flex items-center gap-2 mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#E1181E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
          </svg>
          <h2 class="text-2xl font-bold text-white">Skills</h2>
        </div>

        <!-- Skills Progress Bars -->
        <div class="space-y-4 mb-6">
          {skills.map((skill) => (
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium text-gray-300">{skill.category}</span>
                <span class="text-sm font-medium text-gray-400">{skill.percentage}%</span>
              </div>
              <div class="w-full bg-gray-700 rounded-full h-2">
                <div 
                  class="bg-[#E1181E] h-2 rounded-full transition-all duration-500"
                  style={`width: ${skill.percentage}%`}
                ></div>
              </div>
            </div>
          ))}
        </div>

        <!-- Technologies Tags -->
        <div class="flex flex-wrap gap-2">
          {technologies.map((tech) => (
            <span class="bg-[#1a1a1a] text-gray-300 px-3 py-1 rounded-full text-sm border border-[#ffffff10] hover:border-[#E1181E] transition-colors">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  @media (max-width: 767px) {
    body {
      padding-bottom: 70px;
    }
  }

  nav a.active {
    color: white !important;
  }
</style>
