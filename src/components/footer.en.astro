<script>
  let likes = 0;
  let liked = false;

  function incrementLikes() {
    let button = document.getElementById("like-button");
    let count = document.getElementById("like-count");

    if (!liked) {
      likes++;
      button.classList.add("bg-red-500"); // Cambia el color al dar like
      button.classList.remove("bg-yellow-300");
    } else {
      likes--;
      button.classList.add("bg-yellow-300"); // Vuelve al color original al quitar el like
      button.classList.remove("bg-red-500");
    }

    liked = !liked; // Alternar estado de like
    count.innerText = likes;
  }
</script>

