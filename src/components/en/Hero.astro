---

<section class="relative pt-32 pb-32 overflow-hidden text-center">
  <!-- Background Pattern -->
  <div
    class="absolute inset-0 opacity-10 bg-[url('/bg-pattern.png')] bg-[length:60px] pointer-events-none z-0"
  >
  </div>

  <!-- Hero Glow -->
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-green-500/10 blur-[120px] rounded-full z-0"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="flex flex-col items-center max-w-4xl mx-auto">
      <div class="text-green-500 font-bold mb-4 font-mono">
        Hello World! I'm
      </div>

      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
        Sebastian Zhunaula
      </h1>

      <p
        class="text-slate-400 mb-12 max-w-lg mx-auto text-sm md:text-base leading-relaxed"
      >
        Developer with experience in multiple technological areas, including web
        development, cybersecurity, and data science.
      </p>

      <div class="flex flex-wrap justify-center gap-4 mb-20 animate-fade-in">
        <a
          href="https://github.com/Devsebastian44"
          target="_blank"
          class="px-8 py-3 rounded-lg bg-green-500 text-black font-bold flex items-center gap-2 hover:bg-green-400 transition-all active:scale-95 shadow-[0_0_20px_-5px_rgba(34,197,94,0.5)]"
        >
          <svg
            viewBox="0 0 24 24"
            width="20"
            height="20"
            stroke="currentColor"
            stroke-width="2.5"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
            ></path></svg
          >
          Github
        </a>
        <a
          href="https://linkedin.com/in/devsebastian44"
          target="_blank"
          class="px-8 py-3 rounded-lg border-2 border-green-500/50 text-green-500 font-bold flex items-center gap-2 hover:bg-green-500/10 transition-all active:scale-95"
        >
          <svg
            viewBox="0 0 24 24"
            width="20"
            height="20"
            stroke="currentColor"
            stroke-width="2.5"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2z"
            ></path><circle cx="4" cy="4" r="2"></circle></svg
          >
          Linkedin
        </a>
      </div>

      <!-- Hero Graphic Container -->
      <div class="relative w-full max-w-3xl px-4 mt-2 md:mt-2">
        <!-- Main Terminal -->
        <div
          class="relative bg-[#050505] border border-white/10 rounded-xl overflow-hidden shadow-2xl z-10 group"
        >
          <!-- Terminal Glow -->
          <div
            class="absolute -inset-[1px] bg-gradient-to-r from-green-500/20 via-cyan-500/20 to-purple-500/20 rounded-xl blur opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Terminal Header -->
          <div
            class="flex items-center justify-between px-4 py-2 bg-[#0a0a0a] border-b border-white/5 relative z-10"
          >
            <div class="flex gap-1.5">
              <div class="w-2.5 h-2.5 rounded-full bg-[#ff5f56]"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-[#ffbd2e]"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-[#27c93f]"></div>
            </div>
            <div class="text-[10px] text-slate-400 font-mono">
              sebastian@dev-workspace
            </div>
            <div class="w-10"></div>
            <!-- Spacer for centering -->
          </div>

          <!-- Terminal Content -->
          <div
            class="p-6 md:p-10 text-left font-mono text-[10px] md:text-xs leading-relaxed flex flex-col md:flex-row gap-8 md:gap-12 relative z-10 min-h-[300px] bg-[#0c0c0c]"
          >
            <!-- ASCII Art -->
            <div
              class="text-green-500 whitespace-pre shrink-0 font-bold opacity-90 select-none"
            >
              {
                `      /\\___/\\
     (  o o  )
     /   ^   \\
    /  |___|  \\
   /   |   |   \\
  /    |   |    \\
       |||||
       |||||`
              }
            </div>

            <!-- System Info -->
            <div class="space-y-2">
              <div class="mb-4">
                <span class="text-amber-400 font-bold"
                  >sebastian@dev-workspace</span
                >
                <div class="text-slate-500 text-[10px]">------------------</div>
              </div>

              <div class="grid grid-cols-[80px_1fr] gap-x-2 gap-y-1.5">
                <div class="text-purple-400 font-bold">OS:</div>
                <div class="text-white">DevOS v4.2.0</div>

                <div class="text-purple-400 font-bold">Host:</div>
                <div class="text-white">ThinkPad X1 Carbon</div>

                <div class="text-purple-400 font-bold">Kernel:</div>
                <div class="text-white">5.15.0-dev</div>

                <div class="text-purple-400 font-bold">Uptime:</div>
                <div class="text-white">45 days, 17 hours</div>

                <div class="text-purple-400 font-bold">Languages:</div>
                <div class="text-white">JavaScript, Python, Go</div>

                <div class="text-purple-400 font-bold">Editor:</div>
                <div class="text-white">VSCode / Neovim</div>

                <div class="text-purple-400 font-bold">Frameworks:</div>
                <div class="text-white">React, Next.js</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Overlaid Code Window (Right) -->
        <div
          class="absolute -right-2 md:-right-8 top-1/2 md:top-auto md:bottom-20 w-[90%] md:w-auto max-w-[320px] bg-[#0F1117] border border-white/10 rounded-lg shadow-2xl z-30 overflow-hidden hidden md:block transform transition-transform hover:scale-105 active:scale-95 duration-300"
        >
          <!-- Window Controls (Vertical) -->
          <div class="absolute left-2 top-3 flex flex-col gap-1.5">
            <div class="w-2 h-2 rounded-full bg-slate-600"></div>
            <div class="w-2 h-2 rounded-full bg-slate-600"></div>
            <div class="w-2 h-2 rounded-full bg-slate-600"></div>
          </div>

          <!-- Code Content -->
          <div
            class="pl-6 p-4 font-mono text-[9px] text-left leading-relaxed text-slate-300 bg-[#0F1117]/95 backdrop-blur-md"
          >
            <div class="mb-2">
              <span class="text-purple-400">import</span> React <span
                class="text-purple-400">from</span
              >
              <span class="text-green-400">'react'</span>;
            </div>

            <div>
              <span class="text-purple-400">const</span>
              <span class="text-yellow-300">DevWorkspace</span> = () => &#123;
            </div>
            <div class="pl-2 mb-2">
              <span class="text-purple-400">const</span> [isLoading, setIsLoading]
              = React.useState(<span class="text-orange-400">true</span>);
            </div>

            <div class="pl-2">React.useEffect(() => &#123;</div>
            <div class="pl-4">
              <span class="text-purple-400">const</span> timer = setTimeout(() =>
              &#123;
            </div>
            <div class="pl-6">
              setIsLoading(<span class="text-orange-400">false</span>);
            </div>
            <div class="pl-4">
              &#125;, <span class="text-orange-400">2000</span>);
            </div>
            <div class="pl-2">&#125;);</div>

            <div class="pl-2 mt-2">
              <span class="text-purple-400">return</span> (
            </div>
            <div class="pl-4">
              &lt;<span class="text-blue-400">div</span> className=<span
                class="text-green-400">"workspace"</span
              >&gt;
            </div>
            <div class="pl-6">&#123;isLoading ? (</div>
            <div class="pl-8">
              &lt;<span class="text-yellow-300">LoadingScreen</span> /&gt;
            </div>
            <div class="pl-2">);</div>
            <div>&#125;</div>
          </div>
        </div>

        <!-- Computer Base Stand with Rainbow Glow -->
        <div class="relative w-[90%] md:w-[85%] mx-auto -mt-1 z-0">
          <div
            class="h-16 bg-[#030712] rounded-b-[30px] border-b border-white/5 relative flex items-center shadow-2xl"
          >
            <!-- Rainbow Glow Border -->
            <div
              class="absolute -inset-[3px] top-0 rounded-b-[34px] bg-gradient-to-r from-yellow-400 via-green-500 to-cyan-500 blur-[8px] opacity-60 -z-10"
            >
            </div>
            <!-- Solid outline to sharpen the glow edge -->
            <div
              class="absolute -inset-[1px] top-0 rounded-b-[31px] bg-gradient-to-r from-yellow-300 via-green-400 to-cyan-400 -z-10"
            >
            </div>

            <!-- Coffee Block -->
            <div
              class="ml-8 md:ml-12 flex items-center gap-2 px-4 py-2 bg-slate-800/50 rounded-lg border border-white/5 backdrop-blur-sm"
            >
              <div class="relative">
                <!-- Steam -->
                <div
                  class="absolute -top-3 left-1 w-0.5 h-2 bg-slate-500/50 rounded-full animate-pulse"
                >
                </div>
                <div
                  class="absolute -top-4 left-2.5 w-0.5 h-2 bg-slate-500/50 rounded-full animate-pulse delay-75"
                >
                </div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-orange-400"
                  ><path d="M17 8h1a4 4 0 1 1 0 8h-1"></path><path
                    d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"></path><line
                    x1="6"
                    x2="6"
                    y1="2"
                    y2="4"></line><line x1="10" x2="10" y1="2" y2="4"
                  ></line><line x1="14" x2="14" y1="2" y2="4"></line></svg
                >
              </div>
              <span
                class="text-[9px] font-bold text-slate-400 tracking-widest uppercase"
                >COFFEE</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
