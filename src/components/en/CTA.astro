---
const devSebastianPattern: Record<number, number[]> = {
    17: [1, 2, 3, 4, 5],
    18: [1, 5],
    19: [1, 5],
    22: [1, 2, 3, 4, 5],
    23: [1, 5],
    24: [1, 2, 3, 4, 5],
    27: [1, 2, 3, 4, 5],
    28: [1, 5],
    29: [2, 3, 4],
    32: [1, 2, 3, 4, 5],
    33: [1, 3, 5],
    34: [1, 3, 5],
};
---

<section
    class="py-24 relative overflow-hidden flex flex-col items-center justify-center text-center"
>
    <div class="container mx-auto px-6 relative z-10">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">
            Ready to <span class="text-green-500">Collaborate?</span>
        </h2>
        <p
            class="text-slate-400 text-sm md:text-base max-w-xl mx-auto mb-16 leading-relaxed"
        >
            My life revolves around code, coffee, and creativity. Let's build
            something amazing together!
        </p>

        <!-- GitHub Card - Integrated in CTA -->
        <div
            class="bg-[#050505] border border-white/10 rounded-2xl p-5 md:p-8 mb-16 relative overflow-hidden group shadow-2xl max-w-5xl mx-auto"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>

            <!-- Header -->
            <div
                class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4 relative z-10"
            >
                <div class="flex items-center gap-3">
                    <img
                        src="https://avatars.githubusercontent.com/u/146502229?v=4"
                        alt="Sebastian Zhunaula"
                        class="w-10 h-10 rounded-full border border-white/10"
                    />
                    <span class="text-slate-400 text-sm font-mono"
                        >github.com/Devsebastian44</span
                    >
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-[10px] text-slate-500 uppercase font-mono"
                        >Less</span
                    >
                    <div class="flex gap-1">
                        <div
                            class="w-3 h-3 rounded-sm bg-slate-900 border border-white/5"
                        >
                        </div>
                        <div class="w-3 h-3 rounded-sm bg-green-900/40"></div>
                        <div class="w-3 h-3 rounded-sm bg-green-700/60"></div>
                        <div class="w-3 h-3 rounded-sm bg-green-500/80"></div>
                        <div class="w-3 h-3 rounded-sm bg-green-400"></div>
                    </div>
                    <span class="text-[10px] text-slate-500 uppercase font-mono"
                        >More</span
                    >
                </div>
            </div>

            <!-- Matrix Contribution Grid -->
            <div class="overflow-hidden pb-6 mb-8 relative z-10 px-4">
                <div
                    class="flex gap-[3px] md:gap-[4px] justify-center font-mono text-[8px] md:text-[10px] select-none mx-auto"
                    id="matrix-grid-en"
                >
                    {
                        Array.from({ length: 52 }).map((_, i) => (
                            <div
                                class={`flex flex-col gap-[2px] ${i > 22 ? "hidden sm:flex" : "flex"}`}
                            >
                                {Array.from({ length: 7 }).map((_, j) => {
                                    return (
                                        <div class="matrix-cell w-[10px] h-[10px] md:w-[12px] md:h-[12px] flex items-center justify-center rounded-[2px] transition-all duration-500 text-green-950 opacity-30">
                                            {String.fromCharCode(
                                                33 +
                                                    Math.floor(
                                                        Math.random() * 94,
                                                    ),
                                            )}
                                        </div>
                                    );
                                })}
                            </div>
                        ))
                    }
                </div>
            </div>

            <script>
                const grid = document.getElementById("matrix-grid-en");
                if (grid) {
                    const cells = grid.querySelectorAll(".matrix-cell");
                    const chars = "0123456789ABCDEF!@#$%^&*()_+-=[]{}|;:,.<>?/";

                    setInterval(() => {
                        for (let i = 0; i < 40; i++) {
                            const randomIndex = Math.floor(
                                Math.random() * cells.length,
                            );
                            const cell = cells[randomIndex] as HTMLElement;

                            if (Math.random() > 0.92) {
                                cell.style.color = "#22c55e"; // Primary Brand Green (#22c55e)
                                cell.style.opacity = "1";
                                cell.style.textShadow =
                                    "0 0 12px rgba(34, 197, 94, 0.8)";
                                cell.style.transform = "scale(1.15)";
                            } else {
                                cell.style.color = "#052e16"; // Darkest green (green-950)
                                cell.style.opacity = (
                                    Math.random() * 0.5 +
                                    0.1
                                ).toString();
                                cell.style.textShadow = "none";
                                cell.style.transform = "scale(1)";
                            }

                            if (Math.random() > 0.7) {
                                cell.textContent =
                                    chars[
                                        Math.floor(Math.random() * chars.length)
                                    ];
                            }
                        }
                    }, 50);
                }
            </script>
        </div>

        <!-- Circular Graphic -->
        <div
            class="relative w-72 h-72 md:w-[380px] md:h-[380px] mx-auto flex items-center justify-center p-4 overflow-visible"
        >
            <!-- Background Circle with Pattern -->
            <div
                class="absolute inset-0 rounded-full bg-[#050505] border border-white/10 shadow-[0_0_80px_-20px_rgba(34,197,94,0.2)] overflow-hidden"
            >
                <div
                    class="absolute inset-0 opacity-40 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:30px_30px] md:bg-[size:40px_40px]"
                >
                </div>
            </div>

            <!-- Rotating Ring -->
            <div class="absolute inset-0 animate-slow-spin">
                <!-- Code -->
                <div
                    class="absolute top-4 md:top-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-1"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-green-500 w-5 h-5 md:w-7 md:h-7"
                        ><polyline points="16 18 22 12 16 6"
                        ></polyline><polyline points="8 6 2 12 8 18"
                        ></polyline></svg
                    >
                    <span
                        class="text-[10px] md:text-sm font-black text-white uppercase tracking-tighter"
                        >CODE</span
                    >
                </div>

                <!-- Repeat -->
                <div
                    class="absolute right-4 md:right-8 top-1/2 -translate-y-1/2 flex flex-col items-center gap-1 rotate-90"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-green-500 w-5 h-5 md:w-7 md:h-7"
                        ><path d="m17 2 4 4-4 4"></path><path
                            d="M3 11v-1a4 4 0 0 1 4-4h14"></path><path
                            d="m7 22-4-4 4-4"></path><path
                            d="M21 13v1a4 4 0 0 1-4 4H3"></path></svg
                    >
                    <span
                        class="text-[10px] md:text-sm font-black text-white uppercase tracking-tighter"
                        >REPEAT</span
                    >
                </div>

                <!-- Sleep -->
                <div
                    class="absolute bottom-4 md:bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-1 rotate-180"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-green-500 w-5 h-5 md:w-7 md:h-7"
                        ><path d="M2 4v16"></path><path
                            d="M2 8h18a2 2 0 0 1 2 2v10"></path><path
                            d="M2 17h20"></path><path d="M6 8v9"></path></svg
                    >
                    <span
                        class="text-[10px] md:text-sm font-black text-white uppercase tracking-tighter"
                        >SLEEP</span
                    >
                </div>

                <!-- Eat -->
                <div
                    class="absolute left-4 md:left-8 top-1/2 -translate-y-1/2 flex flex-col items-center gap-1 -rotate-90"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-green-500 w-5 h-5 md:w-7 md:h-7"
                        ><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"
                        ></path><path d="M7 2v20"></path><path
                            d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"
                        ></path></svg
                    >
                    <span
                        class="text-[10px] md:text-sm font-black text-white uppercase tracking-tighter"
                        >EAT</span
                    >
                </div>
            </div>

            <!-- Centered Hire Me Button -->
            <a
                href="#contact"
                class="group relative z-20 px-6 py-3 md:px-10 md:py-4 bg-green-500 text-[#050505] font-black rounded-lg md:rounded-xl flex items-center gap-2 md:gap-3 hover:bg-green-400 transition-all hover:scale-105 active:scale-95 shadow-[0_0_30px_-5px_rgba(34,197,94,0.4)]"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-4 h-4 md:w-5 md:h-5"
                    ><rect width="20" height="14" x="2" y="7" rx="2" ry="2"
                    ></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                    ></path></svg
                >
                <span class="text-sm md:text-lg">Hire Me</span>
            </a>

            <!-- Decorative Glow -->
            <div
                class="absolute -z-10 bg-green-500/10 w-full h-full rounded-full blur-[80px] md:blur-[120px]"
            >
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes slow-spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
    .animate-slow-spin {
        animation: slow-spin 30s linear infinite;
    }
</style>
