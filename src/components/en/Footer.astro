---
const currentYear = new Date().getFullYear();
const socialLinks = [
    { name: "youtube", url: "https://www.youtube.com/@devsebastian44" },
    { name: "x", url: "https://x.com/devsebastian44" },
    { name: "tiktok", url: "https://www.tiktok.com/@devsebastian44" },
    { name: "instagram", url: "https://www.instagram.com/devsebastian44" },
];
---

<footer
    class="pt-24 pb-8 relative overflow-hidden bg-[#020617] border-t border-slate-700"
>
    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl mx-auto">
            <div
                class="flex flex-col md:flex-row justify-center gap-12 md:gap-20 mb-20"
            >
                <!-- Left Side: Brand & Bio -->
                <div class="max-w-md space-y-8">
                    <div class="space-y-6">
                        <a
                            href="/"
                            class="text-2xl font-bold text-white tracking-tighter flex items-center gap-2"
                        >
                            <img
                                src="/Img/favicon.png"
                                alt="DevPro Logo"
                                class="w-8 h-8 object-contain drop-shadow-[0_0_12px_rgba(34,197,94,0.6)]"
                            />
                            DevPro
                        </a>
                        <p class="text-slate-400 text-sm leading-relaxed">
                            Creating digital experiences with clean code,
                            creativity, and a passion for innovation.
                        </p>
                    </div>

                    <div class="flex gap-6">
                        {
                            socialLinks.map((social) => (
                                <a
                                    href={social.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-500 hover:text-green-500 transition-colors"
                                >
                                    <span class="sr-only">{social.name}</span>
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="20"
                                        height="20"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        {social.name === "youtube" && (
                                            <>
                                                <path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17Z" />
                                                <path d="m10 15 5-3-5-3z" />
                                            </>
                                        )}
                                        {social.name === "x" && (
                                            <path d="M4 4l11.733 16h4.267l-11.733 -16zM4 20l6.768-6.708m2.46-2.441l6.772-6.851" />
                                        )}
                                        {social.name === "tiktok" && (
                                            <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5" />
                                        )}
                                        {social.name === "instagram" && (
                                            <>
                                                <rect
                                                    width="20"
                                                    height="20"
                                                    x="2"
                                                    y="2"
                                                    rx="5"
                                                    ry="5"
                                                />
                                                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                                <line
                                                    x1="17.5"
                                                    y1="6.5"
                                                    x2="17.51"
                                                    y2="6.5"
                                                />
                                            </>
                                        )}
                                    </svg>
                                </a>
                            ))
                        }
                    </div>
                </div>

                <!-- Right Side: Navigation -->
                <div class="">
                    <h4
                        class="text-white font-bold tracking-widest text-sm mb-6 uppercase"
                    >
                        Navigation
                    </h4>
                    <ul class="space-y-4">
                        <li>
                            <a
                                href="/en#about"
                                class="text-slate-400 hover:text-green-500 text-sm transition-colors flex items-center gap-2 group/nav"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-green-500/50 group-hover/nav:text-green-500 transition-colors"
                                    ><path
                                        d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"
                                    ></path><circle cx="12" cy="7" r="4"
                                    ></circle></svg
                                >
                                About
                            </a>
                        </li>
                        <li>
                            <a
                                href="/en#projects"
                                class="text-slate-400 hover:text-green-500 text-sm transition-colors flex items-center gap-2 group/nav"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-green-500/50 group-hover/nav:text-green-500 transition-colors"
                                    ><rect
                                        width="20"
                                        height="14"
                                        x="2"
                                        y="7"
                                        rx="2"
                                        ry="2"></rect><path
                                        d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                                    ></path></svg
                                >
                                Projects
                            </a>
                        </li>
                        <li>
                            <a
                                href="/en#contact"
                                class="text-slate-400 hover:text-green-500 text-sm transition-colors flex items-center gap-2 group/nav"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-green-500/50 group-hover/nav:text-green-500 transition-colors"
                                    ><rect
                                        width="20"
                                        height="16"
                                        x="2"
                                        y="4"
                                        rx="2"></rect><path
                                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                    ></path></svg
                                >
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div
                class="pt-8 border-t border-white/5 flex flex-col justify-center items-center text-center gap-2"
            >
                <div class="text-slate-500 text-xs font-medium leading-relaxed">
                    Copyright Â© 2025 Sebastian Zhunaula. All rights reserved.
                </div>
            </div>
        </div>
    </div>
</footer>
