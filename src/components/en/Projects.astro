---
const projects = [
    {
        title: "Modern Esthete",
        description: "Modern e-commerce interface focusing on clean design and user experience.",
        image: "/Img/e-commerce.png",
        tags: ["TypeScript", "Next.js", "Tailwind CSS", "React","PostgreSQL"],
        github: "https://github.com/Devsebastian44/Modern-Esthete",
        demo: "https://modernesthete.vercel.app/"
    },
    {
        title: "FintechPro",
        description: "Landing page focused on market analysis and trading tools for crypto and assets.",
        image: "/Img/landing-page.png",
        tags: ["Astro", "TypeScript", "Tailwind CSS"],
        github: "https://github.com/Devsebastian44/FintechPro",
        demo: "https://fintechprocripto.netlify.app/"
    },
    {
        title: "DevBlog",
        description: "Blog focusing on programming, cybersecurity, and data science and AI",
        image: "/Img/devblog.png",
        tags: ["Astro", "TypeScript", "Tailwind CSS"],
        github: "https://github.com/Devsebastian44/DevBlog",
        demo: "https://devblog44.vercel.app/"
    },
    {
        title: "Alura Store",
        description: "Analysis of sales, performance, and customer satisfaction for Alura Store branches.",
        image: "/Img/alura.png",
        tags: ["Python", "Pandas", "Matplotlib", "Seaborn"],
        github: "https://github.com/Devsebastian44/Alura-Store",
        demo: "https://colab.research.google.com/github/Devsebastian44/Challenge-Data-Science/blob/master/Challenge_Alura_Latam.ipynb"
    },
    {
        title: "Nextcloud Auto Setup",
        description: "Script to automate the installation and configuration of a private cloud with Nextcloud.",
        image: "/Img/nextcloud.png",
        tags: ["Bash", "Apache", "Ubuntu Server", "MySQL"],
        github: "https://github.com/Devsebastian44/Nextcloud-Auto-Setup"
    },
    {
        title: "Sandboxed",
        description: "Script for automated malware analysis with detection of suspicious patterns.",
        image: "/Img/sandboxed.png",
        tags: ["Python", "Bash"],
        github: "https://github.com/Devsebastian44/Sandboxed"
    }
];

const techIcons: Record<string, string> = {
    "TypeScript": "simple-icons:typescript",
    "Next.js": "simple-icons:nextdotjs",
    "Tailwind CSS": "simple-icons:tailwindcss",
    "Astro": "simple-icons:astro",
    "Python": "simple-icons:python",
    "Pandas": "simple-icons:pandas",
    "Matplotlib": "lucide:line-chart",
    "Seaborn": "lucide:bar-chart-3",
    "Bash": "simple-icons:gnubash",
    "Apache": "simple-icons:apache",
    "Ubuntu Server": "simple-icons:ubuntu",
    "Linux": "simple-icons:linux",
    "React": "simple-icons:react",
    "PostgreSQL": "simple-icons:postgresql",
    "MySQL": "simple-icons:mysql",
};
---

<section id="projects" class="py-24 relative overflow-hidden bg-[#020617] border-y border-slate-700">
    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">
                My <span class="text-green-500">Projects</span>
            </h2>
            <p class="text-slate-400 text-sm md:text-base max-w-2xl mx-auto leading-relaxed">
                A collection of my best projects, showcasing innovative solutions and clean code. Click to explore details.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
            {projects.map((project) => (
                <div class="group bg-[#020617]/50 backdrop-blur-sm border border-white/5 rounded-2xl overflow-hidden shadow-2xl hover:border-green-500/20 transition-all duration-500 flex flex-col">
                    <!-- Project Image -->
                    <div class="relative aspect-video overflow-hidden">
                        <img 
                            src={project.image} 
                            alt={project.title}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-[#020617] via-transparent to-transparent opacity-60"></div>
                    </div>

                    <!-- Project Content -->
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-green-500/10 text-green-500">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-white">{project.title}</h3>
                        </div>
                        
                        <p class="text-slate-400 text-sm leading-relaxed mb-8 h-12 overflow-hidden italic">
                            {project.description}
                        </p>

                        <!-- Tags -->
                        <div class="flex flex-wrap gap-2 mb-10 mt-auto">
                            {project.tags.map((tag) => (
                                <span class="flex items-center gap-1.5 px-3 py-1 bg-slate-900 border border-white/5 text-[10px] font-mono text-slate-500 rounded-lg hover:text-green-500 hover:border-green-500/20 transition-all">
                                    <iconify-icon icon={techIcons[tag]} class="text-xs"></iconify-icon>
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <!-- Links -->
                        <div class="flex items-center gap-6 pt-6 border-t border-white/5">
                            {project.github && (
                                <a href={project.github} target="_blank" class="text-slate-500 hover:text-white transition-all transform hover:scale-110" aria-label="GitHub Repository">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                                </a>
                            )}
                            {project.demo && (
                                <a href={project.demo} target="_blank" class="text-slate-500 hover:text-white transition-all transform hover:scale-110" aria-label="Live Demo">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                                </a>
                            )}
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- More Projects Button -->
        <div class="mt-20 flex justify-center relative z-10">
            <a 
                href="https://github.com/Devsebastian44" 
                target="_blank" 
                rel="noopener noreferrer"
                class="group/github flex items-center gap-3 px-10 py-4 bg-[#0f172a] border border-white/10 rounded-2xl text-white hover:border-green-500/50 hover:shadow-[0_0_30px_rgba(34,197,94,0.15)] transition-all duration-300 transform hover:-translate-y-1"
            >
                <span class="text-slate-300 group-hover/github:text-white transition-colors">View more projects on</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 group-hover/github:scale-110 transition-transform">
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                    <path d="M9 18c-4.51 2-5-2-7-2"/>
                </svg>
            </a>
        </div>
    </div>
    
    <!-- Decorative background glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-green-500/5 rounded-full blur-[120px] -z-10"></div>
</section>
